        // Render jobs
        function renderJobs(filteredJobs = jobs) {
            const container = document.getElementById('job-listings');
            const noResults = document.getElementById('no-results');
            const jobCount = document.getElementById('job-count');
            
            jobCount.textContent = filteredJobs.length;
            
            if (filteredJobs.length === 0) {
                container.innerHTML = '';
                noResults.classList.remove('hidden');
                return;
            }
            
            noResults.classList.add('hidden');
            container.innerHTML = filteredJobs.map(job => `
                <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
                    <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-4">
                        <div class="flex-1">
                            <h3 class="text-2xl font-bold text-gray-900 mb-2">${job.title}</h3>
                            <div class="flex flex-wrap gap-3 text-sm text-gray-600">
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    ${job.location}
                                </span>
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    ${job.type}
                                </span>
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    ${job.salary}
                                </span>
                            </div>
                        </div>
                        <div class="mt-4 md:mt-0">
                            <span class="inline-block px-3 py-1 bg-emerald-100 text-emerald-800 rounded-full text-sm font-semibold">${job.level} Level</span>
                        </div>
                    </div>
                    
                    <p class="text-gray-700 mb-4">${job.description}</p>
                    
                    <div class="mb-4">
                        <h4 class="font-semibold text-gray-900 mb-2">Key Requirements:</h4>
                        <ul class="space-y-1">
                            ${job.requirements.map(req => `<li class="text-sm text-gray-600">‚Ä¢ ${req}</li>`).join('')}
                        </ul>
                    </div>
                    
                    <div class="mb-4">
                        <h4 class="font-semibold text-gray-900 mb-2">Tech Stack:</h4>
                        <div class="flex flex-wrap gap-2">
                            ${job.tech.map(tech => `<span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">${tech}</span>`).join('')}
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between pt-4 border-t">
                        <span class="text-sm text-gray-500">Posted: ${new Date(job.posted).toLocaleDateString()}</span>
                        <button onclick="openModal(${job.id})" class="px-6 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition-all font-semibold">
                            Apply Now
                        </button>
                    </div>
                </div>
            `).join('');
        }

        // Filter jobs
        function filterJobs() {
            const search = document.getElementById('search').value.toLowerCase();
            const category = document.getElementById('category').value;
            const location = document.getElementById('location').value;
            const level = document.getElementById('level').value;
            
            const filtered = jobs.filter(job => {
                const matchesSearch = search === '' || 
                    job.title.toLowerCase().includes(search) ||
                    job.description.toLowerCase().includes(search) ||
                    job.tech.some(t => t.toLowerCase().includes(search));
                const matchesCategory = category === '' || job.category === category;
                const matchesLocation = location === '' || job.location === location;
                const matchesLevel = level === '' || job.level === level;
                
                return matchesSearch && matchesCategory && matchesLocation && matchesLevel;
            });
            
            renderJobs(filtered);
        }

        // Modal functions
        function openModal(jobId) {
            const job = jobs.find(j => j.id === jobId);
            document.getElementById('modal-job-title').textContent = `Apply for ${job.title}`;
            document.getElementById('job-id').value = jobId;
            document.getElementById('application-modal').style.display = 'flex';
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            document.getElementById('application-modal').style.display = 'none';
            document.body.style.overflow = 'auto';
            document.getElementById('application-form').reset();
        }

        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Form submission
        document.getElementById('application-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const jobId = formData.get('job_id');
            const job = jobs.find(j => j.id == jobId);
            
            // In production, send to API endpoint
            // For now, show success message
            alert(`Thank you for applying to ${job.title}!\n\nYour application has been submitted successfully. We'll review it and get back to you within 5-7 business days.\n\nApplication will be sent to: info@startekk.net`);
            
            closeModal();
            
            // Track with GA
            gtag('event', 'job_application', {
                'job_title': job.title,
                'job_id': jobId
            });
        });

        // Event listeners
        document.getElementById('search').addEventListener('input', filterJobs);
        document.getElementById('category').addEventListener('change', filterJobs);
        document.getElementById('location').addEventListener('change', filterJobs);
        document.getElementById('level').addEventListener('change', filterJobs);

        // Close modal on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && document.getElementById('application-modal').style.display === 'flex') {
                closeModal();
            }
        });

        // Initial render
        renderJobs();
    </script>
</body>
</html>
